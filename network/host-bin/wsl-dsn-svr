PATH=/bin:/usr/bin:/sbin:/usr/sbin:/home/firest/laboro/konstruanto/network/host-bin
DESC="dns-svr daemon"
NAME=dns-svr
DAEMON=/home/firest/laboro/konstruanto/network/host-bin/dns-svr
PIDFILE=/var/run/dns-svr/pid
SCRIPTNAME=/etc/init.d/"$NAME"

test -f $DAEMON || exit 0

. /lib/lsb/init-functions

case "$1" in
start)	log_daemon_msg "Starting periodic command scheduler" "dns-svr"
	start-stop-daemon --start  \
        --background \
        --pidfile ${PIDFILE} \
        --exec ${DAEMON}
        log_end_msg $?
	;;
stop)	log_daemon_msg "Stopping periodic command scheduler" "dns-svr"
        killproc -p $PIDFILE $DAEMON
        RETVAL=$?
        [ $RETVAL -eq 0 ] && [ -e "$PIDFILE" ] && rm -f $PIDFILE
        log_end_msg $RETVAL
        ;;
restart) log_daemon_msg "Restarting periodic command scheduler" "dns-svr" 
        $0 stop
        $0 start
        ;;
reload|force-reload) log_daemon_msg "Reloading configuration files for periodic command scheduler" "dns-svr"
	# dns-svr reloads automatically
        log_end_msg 0
        ;;
status)
        status_of_proc -p $PIDFILE $DAEMON $NAME && exit 0 || exit $?
        ;;
*)	log_action_msg "Usage: /etc/init.d/dns-svr {start|stop|status|restart|reload|force-reload}"
        exit 2
        ;;
esac
exit 0
