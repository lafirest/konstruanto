#!/bin/bash

set -e

#ETC_DIR=etc
ETC_DIR=/etc/laborbenko
RETRY=3
ENV=DISPLAY,http_proxy,https_proxy,BASH_FUNC_clone%%

function run_as {
    local user=$1
    shift;
    runuser -w $ENV -s /bin/bash - "$user" -c "$*"
}

function apt {
    command apt -o Acquire::http::proxy=false "$@"
}

function load_layer {
    exec_cmds "$1" "$ETC_DIR/$1"
}

function clone {
    local dir="$1"
    local repo="$2"
    rm -rf "$dir"
    git clone --depth 1 "$repo"
    cd "$dir"
    git config remote.origin.fetch '+refs/heads/*:refs/remotes/origin/*'

}

export -f clone

# automatically retry N times after failure
function with_retry {
    local i=0
    local result=0
    local cmd="$1"
    echo "$cmd"
    while true
    do
        set +e
        eval "$cmd"
        result=$?
        set -e

        [ $result -eq 0 ] && return 0
        [ $i -ge $RETRY ] && echo "Automatic installation failed, enter manual mode" && exec bash

        i=$(( i+1 ))
        local sleep=$(( i * 3))
        printf "Execute failed,retry:%d,sleep:%d\ncommand:%s\n" $i $sleep "$cmd"
        sleep $sleep
    done
}

# recoverable init script
function recoverable_exec_cmds {
    local index=0
    local layer=$1
    shift;
    local cmds=("$@")
    local cursor="$ETC_DIR/cursor_$layer"
    local len=${#cmds[@]}

    ## find the last succeeded index of commands
    if [[ -f $cursor ]]; then
        index=$(( $(cat "$cursor") + 1 ))
    else
        echo -1 > "$cursor"
        chmod 666 "$cursor"
    fi

    # this index must be local or its value will incorrectly be updated by the sub `load_layer` function
    # which is called by the eval and the wrong value will be inherited by the parent function, which leads to this eval loop breaking
    local i=$index
    for (( ; i<len; i++ ))
    do
        local cmd="${cmds[$i]}"
        with_retry "$cmd"
        echo $i > "$cursor"
    done
}

function exec_cmds {
    local layer=$1
    local file=$2
    local cmds=( )

    if [ -n "$file" ]; then
        # no readarry in Mac
        while IFS='' read -r line; do
            cmds+=( "$line" )
        done < "$file"
    fi

    recoverable_exec_cmds "$layer" "${cmds[@]}"
}

while getopts “i:l:e:b:” argv
do
     case $argv in
         i)
             CLI_IP=$OPTARG
             ;;
         l)
             LAYER=$OPTARG
             ;;
         e)
             EVAL="$OPTARG"
             ;;
         b)
             IS_BUILD=$OPTARG
             ;;
         ?)
         ;;
     esac
done

[ -n "$CLI_IP" ] && sed -i "s/Address =.*/Address = $CLI_IP\\/16/" /etc/wireguard/wgcli.conf

[ -n "$LAYER" ] && [ "init" != "$LAYER" ] && exec_cmds "$LAYER" "$ETC_DIR/$LAYER"

## eval is always executed at the last for load some customized instructions
if [ -n "$EVAL" ]; then
    echo "eval:$EVAL"
    while read -d ";" -r cmd; do
        with_retry "$cmd"
    done <<< "$EVAL"
fi

if $IS_BUILD; then
    exit 0
fi

if [ -x "$(command -v wg-quick)" ]; then
    ip="$(grep -oE -m 1 '[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}' /etc/wireguard/wgcli.conf)"
    echo "Wireguard client ip is:$ip"
    wg-quick up wgcli
fi

su -w $ENV -s /bin/bash - firest
