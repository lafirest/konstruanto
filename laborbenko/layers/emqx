#load_layer erlang
apt update
apt install -y curl
apt install -y unzip
apt install -y cmake
apt install -y autoconf
apt install -y libtool
apt install -y libkrb5-dev
apt install -y libsasl2-dev
run_as clone emqx git@github.com:emqx/emqx.git
run_in emqx  git remote add firest git@github.com:lafirest/emqx.git
run_in emqx  git fetch origin --tags
run_in emqx './scripts/gen-erlang-ls-config.sh > erlang_ls.config'
set-env EMQX_DASHBOARD__DEFAULT_PASSWORD 111111
init-rsync emqx
clean-tmp