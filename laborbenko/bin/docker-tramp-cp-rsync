#!/bin/sh

Port=12000

if [[ "$1" =~ ^(.*):/home/firest/(.*)$ ]]; then
    Address="${BASH_REMATCH[1]}"
    File="${BASH_REMATCH[2]}"
    rsync --times --inplace --recursive rsync://$Address:$Port/$File $2
elif [[ "$2" =~ ^(.*):/home/firest/(.*)$ ]]; then
    Address="${BASH_REMATCH[1]}"
    File="${BASH_REMATCH[2]}"
    rsync --times --inplace --recursive $1 rsync://$Address:$Port/$File
else
    exit 1
fi
