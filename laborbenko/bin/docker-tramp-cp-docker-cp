#!/bin/sh

if [[ "$1" =~ ^.*@(.*):(.*)$ ]]; then
    Container="${BASH_REMATCH[1]}"
    File="${BASH_REMATCH[2]}"
    docker cp "$Container":"$File" "$2"
elif [[ "$2" =~ ^.*@(.*):(.*)$ ]]; then
    Container="${BASH_REMATCH[1]}"
    File="${BASH_REMATCH[2]}"
    docker cp "$1" "$Container":"$File"
else
    exit 1
fi
